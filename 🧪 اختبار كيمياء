      {q:"نموذج بور وضّح أن الإلكترونات:", a:["ساكنة في أماكنها","تدور في مدارات محددة الطاقة","توجد في النواة","تختفي فجأة"], correct:1},
      {q:"رمز العنصر يعبّر عن:", a:["عدد الإلكترونات فقط","اسم العنصر وعدده الذري","نوع العنصر فقط","الكتلة فقط"], correct:1},
      {q:"ما الذي يحدد هوية العنصر؟", a:["عدد النيوترونات","عدد البروتونات","عدد الإلكترونات","عدد الكتلة"], correct:1},
      {q:"الإلكترونات في المستوى الأخير تسمى:", a:["الداخلية","التكافؤ","الحرة","السالبة"], correct:1},
      {q:"ماذا يحدث عند فقدان الذرة لإلكترون؟", a:["تصبح متعادلة","تصبح أيونًا موجبًا","تصبح أيونًا سالبًا","تزداد كتلتها"], correct:1},
      {q:"عدد مستويات الطاقة الرئيسة في الذرة هو:", a:["3","5","7","9"], correct:2},
      {q:"أول مستوى طاقة رئيسي يستطيع حمل:", a:["إلكترونين","4 إلكترونات","8 إلكترونات","18 إلكترونًا"], correct:0},
      {q:"الصيغة العامة لحساب عدد الإلكترونات في أي مستوى طاقة هي:", a:["2n²","n²","4n","2n"], correct:0},
      {q:"المستوى الثالث يمكن أن يحتوي على:", a:["2 إلكترون","8 إلكترونات","18 إلكترون","32 إلكترون"], correct:2},
      {q:"العالم الذي وضع معادلة تصف حركة الإلكترونات كموجات هو:", a:["بور","شرودنجر","دالتون","رذرفورد"], correct:1},
      {q:"النموذج الميكانيكي الكمي للذرة وصف الإلكترونات بأنها:", a:["جسيمات ثابتة","جسيمات وموجات في نفس الوقت","بروتونات","طاقة فقط"], correct:1},
      {q:"أي من الجسيمات التالية كتلته أصغر؟", a:["البروتون","النيوترون","الإلكترون","النواة"], correct:2},
      {q:"الجسيمات الموجودة في النواة هي:", a:["البروتونات والنيوترونات","الإلكترونات فقط","البروتونات فقط","الإلكترونات والنيوترونات"], correct:0},
      {q:"وحدة الكتلة الذرية تعادل تقريبًا كتلة:", a:["إلكترون","نيوترون","بروتون","نواة"], correct:2},
      {q:"إذا كان عدد البروتونات = عدد الإلكترونات، فإن الذرة تكون:", a:["موجبة","سالبة","متعادلة","مشحونة"], correct:2},
      {q:"النظيرين يختلفان في:", a:["عدد البروتونات","عدد الإلكترونات","عدد النيوترونات","نوع العنصر"], correct:2},
      {q:"مجموع البروتونات والنيوترونات في الذرة يسمى:", a:["العدد الذري","العدد الكتلي","رقم الطاقة","رقم المدار"], correct:1},
      {q:"ما الجسيمات التي تحدد النشاط الكيميائي للعنصر؟", a:["النيوترونات","إلكترونات التكافؤ","البروتونات","جميعها"], correct:1},
      {q:"أول من افترض أن الذرة غير قابلة للانقسام هو:", a:["بور","ديموقريطس","طومسون","شرودنجر"], correct:1},
      {q:"جسيم يحمل الشحنة السالبة وكتلته صغيرة جدًا:", a:["بروتون","إلكترون","نيوترون","نواة"], correct:1},
      {q:"الذرات التي تفقد أو تكتسب إلكترونات تسمى:", a:["أيونات","نظائر","مركبات","جسيمات ألفا"], correct:0},
      {q:"أي مما يلي له شحنة موجبة؟", a:["النواة","الإلكترون","المدار","السحابة"], correct:0},
      {q:"إذا كان العنصر يحتوي على 17 بروتونًا، فإن عدده الذري هو:", a:["16","17","18","34"], correct:1},
      {q:"أي مما يلي يُعد جسيمًا دون ذري؟", a:["الذرة","البروتون","العنصر","الجزيء"], correct:1},
      {q:"النواة تحتوي على:", a:["بروتونات فقط","نيوترونات فقط","بروتونات ونيوترونات","إلكترونات"], correct:2},
      {q:"كتلة الإلكترون تساوي تقريبًا:", a:["مثل البروتون","نصف البروتون","صغيرة جدًا","مثل النيوترون"], correct:2},
      {q:"الذرة التي تفقد إلكترونًا تصبح:", a:["سالبة","موجبة","متعادلة","نظير"], correct:1},
      {q:"الإلكترونات تدور حول النواة بسبب:", a:["الجاذبية","القوة الكهربائية","الكتلة","العشوائية"], correct:1},
      {q:"أكبر كتلة توجد في:", a:["الإلكترون","النواة","المدار الأخير","السحابة الإلكترونية"], correct:1},
      {q:"رمز العنصر الذي يحتوي على 11 بروتون هو:", a:["Na","Cl","O","N"], correct:0},
      {q:"النموذج الذي وصف الإلكترونات كسحابة من الاحتمالات هو:", a:["بور","شرودنجر","رذرفورد","طومسون"], correct:1},
      {q:"تسمى المنطقة التي يوجد فيها احتمال كبير لوجود الإلكترون:", a:["المدار","السحابة الإلكترونية","النواة","المستوى الرئيسي"], correct:1},
      {q:"عدد الإلكترونات في الذرة المتعادلة يساوي عدد:", a:["البروتونات","النيوترونات","النواة","الطاقة"], correct:0},
      {q:"العالم الذي وضع أول نظرية ذرية علمية هو:", a:["بور","دالتون","طومسون","رذرفورد"], correct:1},
      {q:"جميع الذرات لعنصر معين لها نفس:", a:["عدد النيوترونات","عدد البروتونات","عدد الكتلة","عدد الطاقة"], correct:1}
    ];

    let current = 0;
    let score = 0;
    let timeLeft = 30 * 60; // 30 دقيقة

    const quizEl = document.getElementById("quiz");
    const nextBtn = document.getElementById("nextBtn");
    const resultEl = document.getElementById("result");
    const timerEl = document.getElementById("timer");

    function formatTime(sec){
      const m = Math.floor(sec/60).toString().padStart(2,"0");
      const s = (sec%60).toString().padStart(2,"0");
      return `${m}:${s}`;
    }

    const timer = setInterval(()=>{
      timeLeft--;
      timerEl.textContent = `الوقت المتبقي: ${formatTime(timeLeft)}`;
      if(timeLeft <= 0){
        clearInterval(timer);
        endQuiz();
      }
    },1000);

    function loadQuestion() {
      const q = quizData[current];
      quizEl.innerHTML = `
        <div class="question"><b>${current+1}. ${q.q}</b></div>
        <div class="options">
          ${q.a.map((opt,i)=>`<label><input type="radio" name="answer" value="${i}"> ${opt}</label>`).join("")}
        </div>`;
      resultEl.textContent = "";
    }

    function checkAnswer() {
      const selected = document.querySelector('input[name="answer"]:checked');
      if(!selected) return alert("اختر إجابة أولاً!");
      const answer = parseInt(selected.value);
      const labels = document.querySelectorAll(".options label");
      if(answer === quizData[current].correct){
        labels[answer].classList.add("correct");
        score++;
        labels.forEach((l,i)=>{ if(i!==answer) l.style.opacity="0.5"; });
      } else {
        labels[answer].classList.add("wrong");
        labels[quizData[current].correct].classList.add("correct");
      }
    }

    function endQuiz(){
      quizEl.innerHTML = "";
      nextBtn.style.display = "none";
      timerEl.textContent = "انتهى الوقت!";
      resultEl.textContent = `⏰ انتهى الاختبار. نتيجتك: ${score} من ${quizData.length}`;
    }

    nextBtn.onclick = ()=>{
      checkAnswer();
      setTimeout(()=>{
        current++;
        if(current < quizData.length){
          loadQuestion();
        } else {
          clearInterval(timer);
          endQuiz();
        }
      },1000);
    };

    loadQuestion();
  </script>
</body>
</html>
